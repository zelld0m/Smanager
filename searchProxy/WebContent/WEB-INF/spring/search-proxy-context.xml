<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        				 http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
        				 
	<context:annotation-config />
	
	<!-- Scans within the base package of the application for @Components to configure as beans,
		 @Controller, @Service, @Configuration, etc. -->
	<context:component-scan base-package="com.search.manager.dao" />
	
	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
         <property name="location" value="file:/home/solr/solr40/config/database.properties" />
    </bean>
    
    <bean id="dataSource_solr" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close" scope="singleton">
       <property name="driverClassName" value="${driverClassName.prod}" />
       <property name="url" value="${url.prod}" />
       <property name="username" value="${username.prod}" />
       <property name="password" value="${password.prod}" />
       <property name="validationQuery" value="select 1" />
  	   <property name="testOnBorrow" value="true" />
  	   <property name="testOnReturn" value="false" />
    </bean>
    
    <bean name="jdbcTemplate" id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate" scope="singleton">
		<constructor-arg ref="dataSource_solr" />
	</bean>
	
	<bean id="solrServerFactory" class="com.search.manager.solr.util.SolrServerFactory" scope="singleton">
		<property name="solrUrl" value="http://localhost:8983/solr-4.1.0" />
		<property name="cores">
			<list>
				<value>demoterule</value>
				<value>elevaterule</value>
				<value>excluderule</value>
				<value>facetsortrule</value>
				<value>redirectrule</value>
				<value>relevancyrule</value>
			</list>
		</property>
	</bean>
	
</beans>