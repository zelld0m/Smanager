<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:aop="http://www.springframework.org/schema/aop"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd">

    <context:annotation-config />

    <!-- Scans within the base package of the application for @Components to 
    configure as beans, @Controller, @Service, @Configuration, etc. -->
    <context:component-scan base-package="com.search.properties.manager" />
    
    <bean id="propertiesManager" class="com.search.properties.manager.PropertiesManager">
        <constructor-arg name="storePropertiesLocation" value="/home/solr/conf/store-properties.xml"/>
        <constructor-arg name="storePropertiesSaveLocation" value="/home/solr/conf"/>
    </bean>
    
    <bean id="solrXmlReader" class="com.search.properties.manager.SolrXmlReader">
        <constructor-arg name="configPath" value="/home/solr/conf/solr.xml"/>
    </bean>
</beans>