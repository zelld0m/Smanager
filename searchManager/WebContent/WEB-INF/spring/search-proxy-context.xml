<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        				 http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
        				 
	<context:annotation-config />
	
	<bean id="solrServerFactory" class="com.mall.solr.SolrServerFactory" scope="singleton">
		<property name="solrUrl" value="http://localhost:8983/solr-4.1.0" />
		<property name="cores">
			<list>
				<value>demoterule</value>
				<value>elevaterule</value>
				<value>excluderule</value>
				<value>facetsortrule</value>
				<value>redirectrule</value>
				<value>relevancyrule</value>
			</list>
		</property>
	</bean>
	
</beans>