<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <!-- PropertiesUtils -->
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod" value="com.search.manager.utility.PropertiesUtils.initPropertiesConfig"/>
        <property name="arguments">
            <list>
                <value>src/test/resources/config/globalvar.properties</value>
            </list>
        </property>
    </bean>
    
    <bean id="propertiesReader" class="com.search.properties.manager.PropertiesReader"/>
    <bean id="propertiesManagerService" class="com.search.properties.manager.service.PropertiesManagerService"/>
    <bean id="propertiesReaderService" class="com.search.properties.manager.service.PropertiesReaderService"/>
    
    <bean id="solrXmlReader" class="com.search.properties.manager.SolrXmlReader">
        <constructor-arg name="configPath" value="src/test/resources/home/solr/conf/solr.xml"/>
    </bean>
    
    <bean id="propertiesManager"
          class="com.search.properties.manager.PropertiesManager">
        <constructor-arg name="storePropertiesLocation" 
                         value="src/test/resources/home/solr/conf/store-properties.xml"/>
        <constructor-arg name="storePropertiesSaveLocation" 
                         value="src/test/resources/home/solr/conf"/>
    </bean>
    
    <bean id="configManager" class="com.search.ws.ConfigManager"
          factory-method="getInstance">
        <constructor-arg name="configPath"
                         value="src/test/resources/home/solr/conf/solr.xml"/>
        <constructor-arg name="pm"
                         ref="propertiesManager"/>
    </bean>
</beans>