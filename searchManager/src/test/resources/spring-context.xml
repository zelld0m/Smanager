<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />
	
    <bean id="propertiesManager"
          class="com.search.properties.manager.PropertiesManager">
        <constructor-arg name="storePropertiesLocation" 
                         value="/Users/pgutierr/Desktop/store-properties.xml"/>
        <constructor-arg name="storePropertiesSaveLocation" 
                         value="/Users/pgutierr/Desktop"/>
    </bean>
    
    <bean id="propertiesManagerService"
          class="com.search.properties.manager.service.PropertiesManagerService"/>
    
    <!-- Scans within the base package of the application for @Components to 
    configure as beans, @Controller, @Service, @Configuration, etc. -->
    <context:component-scan base-package="com.search.manager.core" />
</beans>