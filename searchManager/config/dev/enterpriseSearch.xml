<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- Dev Config -->
<enterprise-search-config>

	<!-- Opstrack -->
	<store name="opstrack">
		<catalog>Opstrack Web</catalog>
		<store-flag>Opstrack_Store</store-flag>
		<dismax>/opstrack</dismax>
		<defType>edismax</defType><!-- Solr 1.4: dismax, Solr 4.3: edismax -->
		<store-specific-fields>
			<facet-template>Opstrack_FacetTemplate</facet-template>
			<product-name>Opstrack_Name</product-name>
			<product-description>Opstrack_Description</product-description>
			<popularity>Opstrack_Popularity</popularity>
		</store-specific-fields>
<!--
		<search-rule override="pcmall"/>
-->
		<search-rule>
			<elevate/>
			<exclude/>
			<demote/>
			<facet-sort/>
			<redirect/>
			<relevancy/>
		</search-rule>
		<default-relevancy>
                	<mm>3&lt;-1 5&lt;90%</mm>
                	<pf/>
                	<bq/>
                	<tie>1</tie>
					<qf>SystemProductID^0 DistSku^0 MfgSku^0 SystemKW Opstrack_SubCategoryIndex^2 Opstrack_Name Opstrack_CategoryIndex^2 Opstrack_ClassIndex^2 Opstrack_SubClassIndex^2 Manufacturer Opstrack_Description</qf>					               	
                	<bf>linear(Opstrack_PopularityScale,1,0)^50</bf>
                	<q.alt>*:*</q.alt>
                	<qs/>
                	<ps>1000</ps>
		</default-relevancy>
	</store>
	
	<!-- PC Mall -->
	<store name="pcmall">
		<catalog>PC Mall Web</catalog>
		<dismax>dismaxpcmallrelevancy</dismax>
		<store-flag>PcMall_StoreFlag</store-flag>
		<defType>edismax</defType><!-- Solr 1.4: dismax, Solr 4.3: edismax -->
		<default-relevancy>
                	<mm>3&lt;-1 5&lt;90%</mm>
                	<pf/>
                	<bq/>
                	<tie>1</tie>
                	<qf>EDP2^0 DPNo2^0 Description^0 UPC2^0 RelevantIDKey^4 NameIndex^2 MfrPN2^0 MfrPN^1 SubCategoryIndex^3 PCMall_FacetTemplateNameIndex^8 ManufacturerIndex^2 CategoryIndex^6 UPC^2</qf>
                	<bf>linear(PcMall_PopularityScale,1,0)^2</bf>
                	<q.alt>*:*</q.alt>
                	<qs/>
                	<ps>1000</ps>
		</default-relevancy>
		<store-specific-fields>
			<facet-template>PCMall_FacetTemplate</facet-template>
			<product-name>PcMall_Name</product-name>
			<product-description>PcMall_Description</product-description>
			<popularity>PcMall_Popularity</popularity>
		</store-specific-fields>
		<search-rule>
			<elevate/>
			<exclude/>
			<demote/>
			<facet-sort/>
			<redirect/>
			<relevancy/>
		</search-rule>
	</store>
</enterprise-search-config>
