<?xml version="1.0" encoding="ISO-8859-1" ?>
<!-- Dev Config -->
<solr-config>
  <!-- Core sharing, pcmbd using pcmall core -->
  <shared-core>true</shared-core>
  <solr-selector-param>storeAlias</solr-selector-param>
  
  <!-- Synched to DB Timezone, in production: America/New_York -->
  <system-timezone>America/Los_Angeles</system-timezone>
  
  <big-bets>
    <fields>SystemProductID,DistSku,MfgSku,SystemKW,Opstrack*,Category,SubCategory,Class,SubClass,CatCode,ImagePath</fields>
    <query>json.nl=map%amp;wt=json%amp;fl=%amp;start=0</query>
  </big-bets>
  
  <!-- Opstrack -->
  <store id="opstrack" name="Opstrack">
    <core>Products</core>
    <sort>score desc</sort>
    <qt>/opstrack</qt>
	<defType>edismax</defType><!-- Solr 1.4: dismax, Solr 4.3: edismax -->
    <facet-name>Opstrack</facet-name>
    <solr-param-name>
    	<param-name>fq</param-name>
    </solr-param-name>
    <solr-param-value name="fq">
    	<param-value>Opstrack_ProductID:*</param-value>
    </solr-param-value>
    <date-format>MM/dd/yyyy</date-format>
    <datetime-format>MM/dd/yyyy HH:mm aa</datetime-format>
    <default-timezone>America/Los_Angeles</default-timezone>
    <default-server>search</default-server>
    <facet-template>Opstrack_FacetTemplate</facet-template>
    <facet-template-name>Opstrack_FacetTemplateName</facet-template-name>
    <group-membership>
    	<group>Store</group>
    	<group>Opstrack</group>
    </group-membership>
  </store>
    
    <server name='search'><!-- Solr Server F5 -->
     <url>http://afs-sl-schmstr.afservice.org:8080/solr4/(core)/</url><!-- Solr 1.4: solr14 , Solr 4.3: solr4 -->
    <store>opstrack</store>
  </server>
  
</solr-config>