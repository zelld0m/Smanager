<?xml version="1.0" encoding="ISO-8859-1" ?>
<solr-config>
  <store name="PCMall">
    <core>pcmall</core>
    <sort>CatCodeOrder asc, score desc, Popularity desc</sort>
    <qt>dismaxpcmallrelevancy</qt>
    <facet-name>PcMall</facet-name>
    
    <solr-param-name>
    	<param-name>fq</param-name>
